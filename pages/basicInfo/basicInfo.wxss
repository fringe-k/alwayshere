.pair-portraits{
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  width:100%;
  height:30%;
  display:flex;
  justify-content: space-around;
  align-items: center;
}
.portrait-image{
  height: 160rpx;
  width: 160rpx;
  border: 0 solid #ffffff;
  border-radius: 250rpx;
  font-size:0;
}
.input-item{
  width:100%;
  height:15%;
  margin-top:5%;
  display:flex;
  flex-direction: row;
}
.separator{
  margin-top: 0;
  height:5rpx;
  width:90%;
  margin-left:6%;
  background:rgb(222, 223, 219);
}
.input{
  margin-top:38rpx;
  margin-left:75rpx;
  width:300rpx;
  color: gray;
}
.arrow{
  width: 15rpx;
  height: 15rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
  margin-left:20%;
  margin-top:60rpx;
}
.input2{
  width:40%;
  margin-top:38rpx;
}